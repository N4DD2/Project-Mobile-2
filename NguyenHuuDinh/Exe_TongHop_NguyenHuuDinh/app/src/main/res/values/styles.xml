<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="styleExe">
        <item name="android:background">@color/colorBtnExe</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/colorTextBtnExe</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="btnAnim">
        <item name="android:background">@color/colorBackgroundTitle</item>
        <item name="android:textColor">@color/colorTextBtnExe</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="deskBtn">
        <item name="android:background">@color/colorDesk</item>
        <item name="android:textColor">@color/colorTextDesk</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="khuBtn">
        <item name="android:background">@color/colorKhu</item>
        <item name="android:textColor">@color/colorTextDesk</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>
